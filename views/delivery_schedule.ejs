<%- include('head') %>
<%- include('navbar') %>
<head>
    <link rel="stylesheet" href="/css/appointment-picker.css">
    <link rel="stylesheet" href="/css/jsCalendar.css">
    <script src="/js/jsCalendar.js"></script>
    <script src="/js/jsCalendar.datepicker.js"></script>
    <script src="/js/appointment-picker.min.js"></script>
</head>

<body>
    <div class="container">
        <h1 class="mt-3">Schedule Delivery</h1>
        <form>
            <div class="form-group">
                <label for="date">Date </label>
                <input type="text"
                       name="test-1"
                       data-datepicker/>
            </div>
            <div class="form-group">
                <label for="time">Time </label>
                <input id="time" type="text" value="8:15" placeholder="hh:mm" aria-live="assertive" aria-label="Use up or down arrow keys to change time">
            </div>
            Locations<br>
            <a href="#">See map</a>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Pickup</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Destination</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Delivery Notes</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Notes">
            </div>
            <input type="submit" value="Schedule">
        </form>
    </div>

</body>

<script type="text/javascript">
  let picker = new AppointmentPicker(document.getElementById('time'), {
    interval: 60,
    mode: '12h',
    minTime: 9,
    maxTime: 18,
    startTime: 9,
    endTime: 18,
    disabled: ['1:30 pm', '2:00 pm', '7:30 pm']
  });
</script>

