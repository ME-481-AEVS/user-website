<%- include('components/head') %>
<%- include('components/navbar') %>
<%- include('../util/helpers') %>
<%- messages('components/messages', locals) %>

<style>
  .edit {
    --bs-link-color: #0780b9;
    --bs-link-hover-color: #056794;
  }

  .cancel {
    --bs-link-color: #e13232;
    --bs-link-hover-color: #a41313;
  }
</style>
<body>
<div class="container text-center">
    <h1 class="my-4">Scheduled Deliveries</h1>
    <table class="table table-striped">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            <th scope="col">Start Location</th>
            <th scope="col">End Location</th>
            <th scope="col">Status</th>
            <th scope="col">Edit / Cancel</th>
        </tr>
        </thead>
        <tbody>
        <% deliveries.forEach( delivery => { %>
            <tr>
                <th scope="row"><%= delivery.startTime.toLocaleDateString() %></th>
                <td><%= delivery.startTime.toLocaleTimeString([], { timeStyle: 'short' }) %></td>
                <td><%= delivery.startLocation %></td>
                <td><%= delivery.endLocation %></td>
                <td><%= getStatus(delivery.status) %></td>
                <td>
                    <a href="#" class="me-2 edit"><i class="bi bi-pencil-fill"></i></a>
                    <a type="button" data-bs-toggle="modal" data-id="<%= delivery.id %>" data-bs-target="#cancelModal" class="ms-2 cancel">
                        <i class="bi bi-x-circle-fill"></i>
                    </a>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>
<div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Cancel Delivery</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to cancel this delivery?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form action="/delivery/cancel" method="post">
                    <input type="hidden" id="cancelId" name="cancelId">
                    <button class="btn btn-danger" type="submit">Confirm Cancellation</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('components/footer') %>
<script>
  // get the delivery id and add it to the form
  $(document).ready(function () {
    $('#cancelModal').on('show.bs.modal', function (e) {
      $(this).find('#cancelId').val($(e.relatedTarget).data('id'));
    });
  });
</script>
</body>
